# Authentication Service Configuration

# Database Configuration
DATABASE_URL=postgresql+asyncpg://auth_user:auth_password123@postgres:5432/auth_db
POSTGRES_DB=auth_db
POSTGRES_USER=auth_user
POSTGRES_PASSWORD=auth_password123

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-32-chars-minimum
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# MinIO Configuration for Profile Photos
MINIO_ENDPOINT=minio-auth:9000
MINIO_ACCESS_KEY=minioauth
MINIO_SECRET_KEY=minioauth123
MINIO_BUCKET_NAME=user-profiles
MINIO_SECURE=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,*

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Application Configuration
APP_NAME=rootly Authentication Service
APP_VERSION=1.0.0
DEBUG=false

# Development/Production flags
ENVIRONMENT=production

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# File Upload Configuration
MAX_PROFILE_PHOTO_SIZE_MB=5
ALLOWED_IMAGE_TYPES=jpeg,jpg,png,webp

# Session Management
MAX_CONCURRENT_SESSIONS=5

# Email Configuration (for future use)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password